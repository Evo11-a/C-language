#include <stdio.h>
void menu()
{
	printf("**********************************\n");
   	printf("*****1.Add*********2.Sub**********\n");
   	printf("*****3.Mul*********4.Div**********\n");
   	printf("********** 0.exit ****************\n");
   	printf("**********************************\n");
}
int Add(int x,int y)
{
	return x+y;
}
int Sub(int x,int y)
{
	return x-y;
}
int Mul(int x,int y)
{
	return x*y;
}
int Div(int x,int y)
{
	return x/y;
}
int main()
{ 
	
    int input,x,y;
    int (*pr[5])(int ,int )={0,Add,Sub,Mul,Div}; //函数指针数组
	do
	{
    //先输入菜单		
   	menu();  
   	printf("请选择:");
   	scanf("%d",&input);
   	if(input>=1&&input<=4)
   	{
   		printf("请输入两个操作数:\n");
   		scanf("%d %d",&x,&y);
   	    //通过input直接访问数组 
   	    int ret =pr[input](x,y);
	    printf("%d\n",ret); 	
	}
   else if(input==0)
	{
		printf("退出\n");
	}
	else
	{
		printf("选择错误\n");
    }
   }while(input);
   
	return 0;
}
